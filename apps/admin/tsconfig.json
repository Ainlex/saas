{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@contafacil/database": [
        "../../packages/database/dist"
      ],
      "@contafacil/ui": [
        "../../packages/ui/dist"
      ],
      "@contafacil/modules": [
        "../../packages/modules/dist"
      ],
      "@contafacil/auth": [
        "../../packages/auth/dist"
      ],
      "@contafacil/shared": [
        "../../packages/shared/dist"
      ]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts/**/*"
  ]
}
