{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "target": "ES2020",
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@contafacil/database": ["../database/dist"],
      "@contafacil/shared": ["../shared/dist"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],
  "references": [
    { "path": "../database" },
    { "path": "../shared" }
  ]
} 